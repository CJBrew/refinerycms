<%%= form_for @setting, :url => refinery.<%= namespacing.underscore %>_admin_setting_path do |f| %>

  <p>
    <%%= t('.explanation') %>
  </p>
  <p>
    <%%= t('.below_edit_email_sent') %>
  </p>
  <table id='<%= singular_name %>'>
    <tr>
      <td>
        <label class='stripped'><%%= t('.to') %></label>
      </td>
      <td>
        <%%= t('.the_customer_making_<%= singular_name %>') %>
      </td>
    </tr>
    <tr>
      <td>
        <label class='stripped'><%%= t('.from') %></label>
      </td>
      <td>
        <%%= "#{Refinery::Core.site_name} &lt;no-reply@#{request.domain}&gt;".html_safe %>
      </td>
    </tr>
    <%% Refinery::I18n.frontend_locales.each do |locale| %>
    <tr>
      <td>
        <label class='stripped'><%%= t('.subject') %> (<%%= locale.to_s %>)</label>
      </td>
      <td>
        <%%= text_field_tag 'subject[][#{locale.to_s}]', Refinery::<%= namespacing %>::Setting.confirmation_subject(locale),
                           :class => 'widest' %>
      </td>
    </tr>
    <tr>
      <td valign='top'>
        <%%= f.label :value, t('.message'), :class => 'stripped' %> (<%%= locale.to_s %>)
      </td>
      <td>
        <%%= text_area_tag 'message[][#{locale.to_s}]', Refinery::<%= namespacing %>::Setting.confirmation_message(locale), :rows => "7", :class => 'widest' %>
        <br/>
        <em><%%= t('.note') %></em>
      </td>
    </tr>
    <%% end %>
  </table>

  <%%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :cancel_url => refinery.<%= namespacing.underscore %>_admin_<%= plural_name %>_url,
             :hide_delete => true %>
<%% end %>
